{
  "strictNullChecks": true,
  "allowUnreachableCode": true,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "baseUrl": "",
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es6",
    "target": "es5",
    "outDir": "../dist/out-tsc",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "**/nativescript-angular/**",
    "../references.d.ts",
    "app/main.aot.ns.ts",
    "app/main.ns.ts",
    "app/peek-module-loader-factory.ts",
    "app/app.module.ts"
  ]
}
